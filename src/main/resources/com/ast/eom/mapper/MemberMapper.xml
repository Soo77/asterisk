<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ast.eom.dao.MemberDao">

	<!-- 컬럼 이름과 자바 객체의 프로퍼티 이름을 연결한다. -->
	<resultMap type="Member" id="MemberMap">
		<id column="mem_no" property="no" />
		<result column="reg_date" property="registeredDate" />
		<result column="gender" property="gender" />
		<result column="dob" property="dateOfBirth" />
		<result column="id" property="id" />
		<result column="email" property="email" />
		<result column="name" property="name" />
		<result column="pwd" property="password" />
		<result column="addr" property="address" />
		<result column="tel" property="tel" />
		<result column="profile_photo" property="profilePhoto" />
		<collection resultMap="MemberTypeMap" property="memberType"></collection>
		<collection resultMap="TeacherMap" property="teacher"></collection>
	</resultMap>

	<resultMap type="MemberType" id="MemberTypeMap">
		<id column="mem_type_no" property="no" />
		<result column="mem_type" property="memberType" />
	</resultMap>
	
	<resultMap type="Teacher" id="TeacherMap">
	<id column="tch_no" property="no"/>
	<result column="acc_no" property="account"/>
	<result column="bank_name" property="bankName"/>
	<result column="lesson_certi" property="lessonCertification"/>
	<result column="tch_intro" property="teacherIntroduce"/>
	<result column="appr_stat" property="approvalStatus"/>
	<result column="vid_addr" property="videoAddress"/>
	
	</resultMap>

	<select id="findAll" resultMap="MemberMap">
		select
		  *
		from
		  member m
		inner join 
		  member_type mt
		on
		  m.mem_type_no = mt.mem_type_no
	</select>
	
	<select id="findAll" resultMap="MemberMap">
		select
		  *
		from
		  member m
		inner join 
		  member_type mt
		on
		  m.mem_type_no = mt.mem_type_no
	</select>
	



	<select id="findBy" parameterType="int" resultMap="MemberMap">
		select
		mem_no,
		reg_date,
		mem_type_no,
		gender,
		dob,
		id,
		email,
		name,
		pwd,
		addr,
		tel,
		profile_photo 
		from member 
		where mem_no=#{ddd}
	</select>

</mapper>