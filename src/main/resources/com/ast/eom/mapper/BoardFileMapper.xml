<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ast.eom.dao.BoardFileDao">

  <resultMap type="BoardFile" id="BoardFileMap">
    <id column="file_no" property="fileNo"/>
    <result column="file_name" property="fileName"/>
    <collection resultMap="BoardMap" property="board"/>
    <collection resultMap="Notice" property="notice"/>
  </resultMap>
  
  <resultMap type="Board" id="BoardMap">
		<id column="board_no" property="boardNo" />
    <result column="titl" property="title" />
    <result column="conts" property="contents" />
    <result column="cdt" property="createdDate" />
		<result column="vw_cnt" property="viewCount" />
    <collection resultMap="BoardTypeMap" property="boardType" />
		<collection resultMap="MemberMap" property="member" />
	</resultMap>
  
  <resultMap type="BoardType" id="BoardTypeMap">
    <id column="board_type_no" property="boardTypeNo" />
    <result column="board_name" property="boardName" />
  </resultMap>
  
  <resultMap type="Member" id="MemberMap">
    <id column="mem_no" property="no" />
    <result column="reg_date" property="registeredDate" />
    <result column="mem_type_no" property="typeNo" />
    <result column="gender" property="gender" />
    <result column="dob" property="dateOfBirth" />
    <result column="id" property="id" />
    <result column="name" property="name" />
    <result column="password" property="password" />
    <result column="addr" property="address" />
    <result column="tel" property="telephone" />
    <result column="profile_photo" property="profilePhoto" />
  </resultMap>
  
  <resultMap type="Notice" id="NoticeMap">
    <id column="notice_no" property="noticeNo" />
    <result column="titl" property="title" />
    <result column="conts" property="contents" />
    <result column="cdt" property="createdDate" />
    <result column="vw_cnt" property="viewCount" />
		<collection resultMap="MemberMap" property="member" />
  </resultMap>
  
  <select id="findAll" parameterType="int" resultMap="BoardFileMap">
    select 
      file_no, 
      file_name, 
      board_no,
      notice_no
    from 
      board_file
    where 
      board_no=#{value}
    order by 
      file_no asc
  </select>
  
  <insert id="insert" parameterType="map">
    insert into board_file(board_no, file_name)
    values(#{board.boardNo},#{file.fileName})
  </insert>
  
</mapper>




